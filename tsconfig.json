{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./web/dist",
    "rootDir": "./web",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["web/**/*"],
  "exclude": ["node_modules", "web/dist"]
}